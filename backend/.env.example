# Application
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL="mysql://root:@localhost:3306/mesin_cuci_store"
# DATABASE_URL="postgresql://username:password@localhost:5432/mesincuci_db"
DATABASE_TEST_URL="postgresql://username:password@localhost:5432/mesincuci_test_db"

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# File Upload
UPLOAD_MAX_SIZE=5242880 # 5MB
UPLOAD_PATH=./uploads

# Cloudinary (for production)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@mesincucistore.com

# Payment Gateway
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
XENDIT_SECRET_KEY=your_xendit_secret_key

# Shipping
RAJAONGKIR_API_KEY=your_rajaongkir_api_key

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Admin
ADMIN_EMAIL=admin@mesincucistore.com
ADMIN_PASSWORD=Admin@123

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
